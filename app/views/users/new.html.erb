<h1>Signup!</h1>

<%= form_for :user, url: 'users', method: :post do %>

  FirstName: <%= text_field_tag :first_name %>
  LastName: <%= text_field_tag :last_name %>
  Email: <%= text_field_tag :email %>
  Password: <%= password_field_tag :password %>
  Password Confirmation: <%= password_field_tag :password_confirmation %>
  <%= submit_tag "Submit" %>
<% end %>


